{
  "dashboard": {
    "title": "Ecommerce Services - Go Metrics",
    "tags": ["ecommerce", "go", "services"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"} == 1)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 7, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "title": "Total Go Routines",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(go_goroutines{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Total Memory Usage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(go_memstats_alloc_bytes{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"}) / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbytes"
          }
        }
      },
      {
        "id": 4,
        "title": "Total CPU Usage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(process_cpu_seconds_total{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "Go Routines by Service",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "go_goroutines{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Memory Usage by Service (MB)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "go_memstats_alloc_bytes{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"} / 1024 / 1024",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbytes"
          }
        }
      },
      {
        "id": 7,
        "title": "CPU Usage by Service (%)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"}[5m]) * 100",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 8,
        "title": "HTTP Requests to Metrics Endpoint",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(promhttp_metric_handler_requests_total{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"}[5m])",
            "legendFormat": "{{job}} - {{code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 9,
        "title": "Service Uptime",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "up{job=~\"users-service|goods-service|order-service|payment-service|delivery-service|notify-service|api-gateway\"}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "list"
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                }
              }
            ]
          }
        }
      }
    ]
  }
}







